@model CouponDTO

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>
        <input asp-for="CouponId"/>

        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="CouponId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input hidden disabled asp-for="CouponId" class="form-control" />
            </div>
            <div class="col-2">
                <label disabled asp-for="CouponCode" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for = "CouponCode" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="MinAmount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="MinAmount" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="DiscountAmount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="DiscountAmount" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control"/>
            </div>
        </div>

        <div>
        </div>
    </div>
</form>


